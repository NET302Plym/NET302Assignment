<UserControl
    x:Class="DWSS.UserControls.ProductUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DWSS.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="Calibri"
    Foreground="Black"
    FontSize="16"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name:" Margin="0,0,10,0"></TextBlock>
            <TextBlock Name="NameTextBlock" FontWeight="Bold"></TextBlock>    
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Category:" Margin="0,0,10,0"></TextBlock>
            <TextBlock Name="CategoryTextBlock"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Sub Category:" Margin="0,0,10,0"></TextBlock>
            <TextBlock Name="SubCategoryTextBlock"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Container:" Margin="0,0,10,0"></TextBlock>
            <TextBlock Name="ContainerTextBlock"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
